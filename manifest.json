{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  
  "version": "2.1",
  "default_locale": "en",

  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "clipboardWrite",
    "storage"
  ],
  
  "icons": {
    "16": "icons/page-16.png",
    "32": "icons/page-32.png",
    "48": "icons/page-48.png"
  },

  "options_ui": {
      "page": "options.html"
  }
}
